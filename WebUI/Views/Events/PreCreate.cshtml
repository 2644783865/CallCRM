@model Domain.Entities.Event

@{
    ViewBag.Title = "Event Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <fieldset>
        <legend>Select which event you want to create:</legend>
        <form method="get" action="/Events/Create">
        <div class="editor-label">
            New Event:
        </div>
        <div class="editor-field">
                @foreach (var item in ViewBag.EventCategoryID) {
               <p><label for="@item.Name"><h3>@item.Name</h3></label> <img src="../../Content/images/@item.Icon" /><input type="radio" name="category" value="@item.EventCategoryID" /></p>
                }
        </div>

       
        <p>
            <input type="submit" value="Continue" />
        </p>
        </form>
    </fieldset>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
